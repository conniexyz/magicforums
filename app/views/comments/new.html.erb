<div class="topics posts">
        <div class="form-holder">
                    <%= form_for(@comment, url:  topic_post_comments_path(@topic, @post), html: { id: "post-create-form" }) do |f| %>
                      <h1 class="text-center">
                        Create Comment
                      </h1>

                      <div class="form-group">
                          <h4> <%= f.label :text_field, "Body" %> </h4>
                          <%= f.text_area :body, id: "comment_body_field", class: 'form-control' %>
                      </div>

                      <div class="form-group text-center">
                          <%= f.submit "Create Comment", class: "btn btn-success btn-lg" %>
                      </div>
                  <% end %>
        </div>
  </div>
