<%= form_for(comment, url: topic_post_comments_path(post.topic, post), method: :post, authenticity_token: true, remote: true, html: { id: "comment-create-form", multipart: true }) do |f| %>
  <h1 class="red-text text-center">
    New Comment
  </h1>

  <div class="form-group">
    <h4 class="text-center"> Post Image </h4>
    <div id="preview-image" data-id="create">
    </div>
  </div>

  <div class="form-group">
    <%= f.file_field :image, id: "comment_image_field", class: 'form-control image-uploader', data: { id: "create" } %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :text_field, "Body", class: "sea-green" %> </h4>
    <%= f.text_field :body, id: "comment_text_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Comment", class: "btn btn-success btn-lg" %>
  </div>
<% end %>